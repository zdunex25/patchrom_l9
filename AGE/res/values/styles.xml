<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Light" />
    <style name="Theme.Transparent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fillViewport">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="EmptyActivity" parent="@android:style/Theme.Dialog">
        <item name="android:colorForeground">#ff000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="FullscreenTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>
    <style name="ButtonBar">
        <item name="android:background">@android:drawable/bottom_bar</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
    </style>
    <style name="ButtonBarButton" />
    <style name="PreferenceListHeader" parent="@android:attr/listSeparatorTextViewStyle">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">#ffcccccc</item>
        <item name="android:paddingTop">6.0px</item>
        <item name="android:paddingBottom">6.0px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="Theme.Custom" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>
</resources>
